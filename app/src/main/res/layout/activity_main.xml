<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.qhubb.qhubb.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:id="@+id/textDeactivateMessage"
            android:textColor="#000000"/>

        <TextView android:text="@string/login_success"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/log_out_button"
            />
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/change_password_button"
            />
        <Button
            android:id="@+id/btnDeactivate"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/deactivate_button"
            />
        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="4dp"
            facebook:confirm_logout="false"
            facebook:tooltip_mode="never_display"
            android:background="@drawable/log_in_facebook_button"
            />

        <Button
            android:id="@+id/btnTwitter"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/log_in_twitter_button"
            />
        <Button
            android:id="@+id/btnTwitterLogout"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:background="@drawable/log_out_twitter_button"
            />
    </LinearLayout>
</RelativeLayout>
