<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="12dp"
    tools:context="com.qhubb.qhubb.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textDeactivateMessage"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login_success" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/log_out_button"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/change_password_button"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnDeactivate"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/deactivate_button"
            android:padding="10dp" />

        <com.facebook.login.widget.LoginButton
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/log_in_facebook_button"
            android:padding="10dp"
            facebook:confirm_logout="false"
            facebook:tooltip_mode="never_display" />

        <Button
            android:id="@+id/btnTwitter"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/log_in_twitter_button"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnTwitterLogout"
            android:layout_width="231dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/log_out_twitter_button"
            android:padding="10dp" />
    </LinearLayout>
</RelativeLayout>
