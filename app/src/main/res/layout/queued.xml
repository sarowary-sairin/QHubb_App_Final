<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
   
    >
    

   <TextView android:id="@+id/words"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Newsfeed"
       android:textColor="@color/White"
       android:textSize="45sp"
       android:layout_centerHorizontal="true"
       />

<!--How do we make this more then 4 items?
  <ListView
      android:id="@+id/MessageList"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:layout_below="@id/words" >
  </ListView>
    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true" >


        <Button android:id="@+id/Feed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/feed_toggle_on_default"
            android:layout_alignTop="@+id/Mentions"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <!-- TO BE INCLUDED IN A FUTURE ITERATION
    <Button android:id="@+id/Messages"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/messages_toggle_off"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        -->

    <Button android:id="@+id/Mentions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/mentions_toggle_off"/>

    </LinearLayout>
  </RelativeLayout>